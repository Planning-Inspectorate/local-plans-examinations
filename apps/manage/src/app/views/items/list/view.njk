{% extends "views/layouts/main.njk" %}

{% from "govuk/components/table/macro.njk" import govukTable %}
{% from "govuk/components/tag/macro.njk" import govukTag %}

{% block pageTitle %}
    Local Plans Examination Service - {{ config.headerTitle }}
{% endblock %}

{% block pageContent %}
    {% set tableRows = [] %}

    {% for item in items %}
        {% set tagText = 'TO DO' %}
        {% if item.done %}
            {% set tagText = 'DONE' %}
        {% endif %}
        {% set tableRows = (tableRows.push([
            {
                text: item.task
            },
            {
                html: govukTag({text: tagText})
            }
        ]), tableRows) %}
    {% endfor %}

    {{ govukTable({
        head: [
            {
                text: "Task"
            },
            {
                text: "Status"
            }
        ],
        rows: tableRows
    }) }}

    <h2 class="govuk-heading-m">Quick actions</h2>
    <p class="govuk-body">
        <a href="/questionnaire" class="govuk-link">View questionnaire responses</a> to monitor user feedback and service satisfaction.
    </p>
{% endblock %}