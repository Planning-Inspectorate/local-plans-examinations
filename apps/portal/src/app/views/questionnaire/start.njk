{% extends "views/layouts/main.njk" %}

{% block content %}
<div class="govuk-grid-row">
	<div class="govuk-grid-column-two-thirds">
		<h1 class="govuk-heading-xl">Local Plans Questionnaire</h1>

		<p class="govuk-body-l">
			Help us improve our local plans service by completing this short questionnaire.
		</p>

		<p class="govuk-body">
			This questionnaire will take approximately 5 minutes to complete and covers:
		</p>

		<ul class="govuk-list govuk-list--bullet">
			<li>Your contact information</li>
			<li>Your experience with the service</li>
			<li>Your feedback and suggestions</li>
		</ul>

		<div class="govuk-warning-text">
			<span class="govuk-warning-text__icon" aria-hidden="true">!</span>
			<strong class="govuk-warning-text__text">
				<span class="govuk-warning-text__assistive">Warning</span>
				Your responses will be used to improve our services. Please do not include any sensitive personal information.
			</strong>
		</div>

		<a href="/questionnaire/personal/full-name" role="button" draggable="false" class="govuk-button govuk-button--start">
			Start questionnaire
			<svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
				<path fill="currentColor" d="m0 0h13l20 20-20 20H0l20-20z"/>
			</svg>
		</a>
	</div>
</div>
{% endblock %}
